{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"convex/schema.ts.old",
		"convex/board.ts.old",
		"src/routes/admin/$status/-publish-dialog.tsx"
	],
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@convex/*": ["./convex/*"]
		},
		"noEmit": true
	}
}
